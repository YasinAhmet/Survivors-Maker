        </positions>
        <members>
            <member Leader="Yes" Name="SpaceMarine">
                <behaviours>
                    <behaviour Name="IncreaseStat">
                        <customParameters>
                            <parameter Name="StatName">
                                <value>MovementSpeed</value>
                            </parameter>
                            <parameter Name="BonusRate">
                                <value>1.85</value>
                            </parameter>
