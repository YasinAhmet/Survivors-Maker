<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <PlayerSettings>
        <playerGroup>SimpleGuy</playerGroup>
        <playerCharacter>Wizard</playerCharacter>
		<spawnEnemies>Yes</spawnEnemies>
		<playSoundEffects>No</playSoundEffects>
		<rareTickTime>0.05</rareTickTime>
		<movementSpeed>0.8</movementSpeed>
        <statMultipliers>
            <damage>1.5</damage>
            <travelSpeed>2</travelSpeed>
        </statMultipliers>
    </PlayerSettings>
    <GamePlugins>
        <plugin Name="ShakeScreenOnHitTaken">
            <description>A Plugin that makes the screen shake on player gets hit</description>
            <behaviours>
                <behaviour Name="ShakeScreenPlugin">
                    <customParameters>
                        <parameter Name="Power" Value="0.03"></parameter>
                        <parameter Name="Duration" Value="0.2"></parameter>
                        <parameter Name="Randomness" Value="0.15"></parameter>
                        <parameter Name="WaitTimeMultiplier" Value="1000"></parameter>
                    </customParameters>
                </behaviour>
            </behaviours>
        </plugin>
        <plugin Name="GameOverScreen">
            <description>A Plugin that pops up game over screen on death</description>
            <behaviours>
                <behaviour Name="GameOverScreenPlugin"></behaviour>
            </behaviours>
        </plugin>
        <plugin Name="XPOrb">
            <description>Sexy xp orbs -_-</description>
            <behaviours>
                <behaviour Name="XPOrbPlugin">
                    <customParameters>
                        <parameter Name="OrbSize" Value="0.6"></parameter>
                        <parameter Name="LocationRandomization" Value="1"></parameter>
                    </customParameters>
				</behaviour>
            </behaviours>
        </plugin>
