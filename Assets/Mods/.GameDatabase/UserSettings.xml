<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <PlayerSettings>
        <playerGroup>SimpleGuy</playerGroup>
        <playerCharacter>SpaceMarine</playerCharacter>
		<spawnEnemies>Yes</spawnEnemies>
		<playSoundEffects>No</playSoundEffects>
		<rareTickTime>0.15</rareTickTime>
        <statMultipliers>
            <damage>1.5</damage>
            <travelSpeed>2</travelSpeed>
        </statMultipliers>
    </PlayerSettings>
    <GamePlugins>
        <plugin Name="ShakeScreenOnHitTaken">
            <description>A Plugin that makes the screen shake on player gets hit</description>
            <behaviours>
                <behaviour Name="ShakeScreenPlugin">
                    <customParameters>
                        <parameter Name="Power"><value>0.03</value></parameter>
                        <parameter Name="Duration"><value>0.2</value></parameter>
                        <parameter Name="Randomness"><value>0.15</value></parameter>
                        <parameter Name="WaitTimeMultiplier"><value>1000</value></parameter>
                    </customParameters>
                </behaviour>
            </behaviours>
        </plugin>
        <plugin Name="GameOverScreen">
            <description>A Plugin that pops up game over screen on death</description>
            <behaviours>
                <behaviour Name="GameOverScreenPlugin"></behaviour>
            </behaviours>
        </plugin>
    </GamePlugins>
</Defs>