<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <UpgradeDef Name="RandomStatIncrease">
        <description>Random stat increase for leader. %25 bonus to a random stat that you don't know until you pick the upgrade...</description>
		<RenderInfo>
			<imageDef>lifeLeechOrb</imageDef>
			<renderSize>0.7</renderSize>
		</RenderInfo>
        <behaviours>
            <behaviour Name="IncreaseStat">
                <customParameters>
                    <parameter Name="StatName">
                        <value>Damage</value>
                    </parameter>
                    <parameter Name="BonusRate">
                        <value>1.25</value>
                    </parameter>
                </customParameters>
            </behaviour>
        </behaviours> 
    </UpgradeDef>
    <UpgradeDef Name="HealthStatIncrease">
        <description>Health increase for leader. %25 bonus to Health stat.</description>
		<RenderInfo>
			<imageDef>healthOrb</imageDef>
			<renderSize>0.8</renderSize>
		</RenderInfo>
        <behaviours>
            <behaviour Name="IncreaseStat">
                <customParameters>
                    <parameter Name="StatName">
                        <value>Health</value>
                    </parameter>
                    <parameter Name="BonusRate">
                        <value>1.55</value>
                    </parameter>
                </customParameters>
            </behaviour>
        </behaviours> 
    </UpgradeDef>
</Defs>