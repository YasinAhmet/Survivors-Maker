<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <UpgradeDef Name="HealthStatIncrease">
        <description>Health increase for leader.</description>
        <onDrop>Yes</onDrop>
        <onLevel>Yes</onLevel>
		<RenderInfo>
			<imageDef>healthOrb</imageDef>
			<renderSize>0.8</renderSize>
		</RenderInfo>
        <behaviours>
		<behaviour Name="IncreaseStat">
                <customParameters>
                    <parameter Name="StatName">
                        <value>MaxHealth</value>
                    </parameter>
                    <parameter Name="BonusRate">
                        <value>25</value>
                    </parameter>
                </customParameters>
            </behaviour>
            <behaviour Name="IncreaseStat">
			
                <customParameters>
                    <parameter Name="StatName">
                        <value>Health</value>
                    </parameter>
                    <parameter Name="BonusRate">
                        <value>24</value>
                    </parameter>
                </customParameters>
            </behaviour>
            
        </behaviours> 
    </UpgradeDef>
	<UpgradeDef Name="DamageStatIncrease">
        <description>Damage increase for leader.</description>
        <onLevel>Yes</onLevel>
		<RenderInfo>
			<imageDef>damageOrb</imageDef>
			<renderSize>0.8</renderSize>
		</RenderInfo>
        <behaviours>
            <behaviour Name="IncreaseStat">
                <customParameters>
                    <parameter Name="StatName">
                        <value>Damage</value>
                    </parameter>
                    <parameter Name="BonusRate">
                        <value>10</value>
                    </parameter>
                </customParameters>
            </behaviour>
        </behaviours> 
    </UpgradeDef>
	<UpgradeDef Name="MovementStatIncrease">
        <description>Movement increase for leader.</description>
        <onDrop>Yes</onDrop>
        <onLevel>Yes</onLevel>
		<RenderInfo>
			<imageDef>lifeLeechOrb</imageDef>
			<renderSize>0.8</renderSize>
		</RenderInfo>
        <behaviours>
            <behaviour Name="IncreaseStat">
                <customParameters>
                    <parameter Name="StatName">
                        <value>MaxSpeed</value>
                    </parameter>
                    <parameter Name="BonusRate">
                        <value>15</value>
                    </parameter>
                </customParameters>
            </behaviour>
        </behaviours> 
    </UpgradeDef>
	<UpgradeDef Name="AddCompanionToGroup">
        <description>Add a space marine to the group.</description>
        <onLevel>Yes</onLevel>
        <behaviours>
            <behaviour Name="AddCompanionUpgrade"></behaviour>
        </behaviours> 
    </UpgradeDef>
</Defs>