<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <ThingDef ParentName="BaseGroup" Name="SpaceMarineGroup">
        <description>Group of space marines.</description>
        <spawnable Type="group">
            <faction>Player</faction>
            <level>1</level>
        </spawnable>
        <members>
            <member Leader="Yes" Name="SpaceMarine">
                <behaviours>
                    <behaviour Name="IncreaseStat">
                        <customParameters>
                            <parameter Name="StatName"><value>Damage</value></parameter>
                            <parameter Name="BonusRate"><value>2.25</value></parameter>
                        </customParameters>
                    </behaviour>
                    <behaviour Name="IncreaseStat">
                        <customParameters>
                            <parameter Name="StatName"><value>MovementSpeed</value></parameter>
                            <parameter Name="BonusRate"><value>1.85</value></parameter>
                        </customParameters>
                    </behaviour>
                </behaviours>
            </member>
            <member Name="SpaceMarine">
                <behaviours>
                    <behaviour Name="FollowLeader"></behaviour>
                </behaviours>
            </member>
            <member Name="SpaceMarine">
                <behaviours>
                    <behaviour Name="FollowLeader"></behaviour>
                </behaviours>
            </member>
        </members>
    </ThingDef>
</Defs>